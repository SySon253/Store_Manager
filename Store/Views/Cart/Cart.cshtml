@model Cart
@if (Model == null || Model.Lines == null || !Model.Lines.Any())
{
    <div class="text-center py-5">
        <h4>Giỏ hàng của bạn đang trống.</h4>
        <a href="/Products/Shop" class="btn btn-primary mt-3">Tiếp tục mua sắm</a>
    </div>
}
else
{
    <div class="container-fluid pt-5">
        <div class="row px-xl-5" style="margin-left: 370px">
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-bordered text-center mb-0">
                    <thead class="bg-secondary text-dark">
                        <tr>
                            <th>Products</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">


                        @foreach (var line in Model.Lines)
                        {
                            <tr>
                                <td class="align-middle">
                                    <img src="/images/@line.ProductImage" alt="" style="width: 50px;"> @line.ProductName
                                </td>
                                <td class="align-middle">$@(line.ProductPrice * (1 - line.ProductDiscount))</td>
                                <td class="align-middle">
                                    <div class="input-group quantity mx-auto" style="width: 100px;">
                                        <div class="input-group-btn">
                                            <a href="/Cart/UpdateCart/?productId=@line.ProductId" class="btn btn-sm btn-primary btn-minus">
                                                <i class="fa fa-minus"></i>
                                            </a>
                                        </div>
                                        <input type="text" class="form-control form-control-sm bg-secondary text-center" value="@line.Quantity">
                                        <div class="input-group-btn">
                                            <a href="/Cart/AddToCart/?productId=@line.ProductId" class="btn btn-sm btn-primary btn-plus">
                                                <i class="fa fa-plus"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">
                                    $@(line.ProductPrice * (1 - line.ProductDiscount) * line.Quantity)
                                </td>
                                <td class="align-middle">
                                    <a href="/Cart/RemoveFromCart/?productId=@line.ProductId" class="btn btn-sm btn-primary">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
