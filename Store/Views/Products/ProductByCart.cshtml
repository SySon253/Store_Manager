 @using Store.Models.ViewModels
@model Store.Models.ViewModels.ProductListViewModel
@{
    ViewData["Title"] = "ProductByCart";
}

<div class="text-center my-5">
    <h1 class="luxury-title">
        @Model.Products.FirstOrDefault()?.Category?.CategoryName
    </h1>
</div>


<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-3 col-md-12">
            <!-- Price Start -->
            <div class="border-bottom mb-4 pb-4">
                <h5 class="font-weight-semi-bold mb-4">Filter by price</h5>
                <form id="price-filter-form">
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input" value="all" checked="" id="price-all">
                        <label class="custom-control-label" for="price-all">All Price</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input" value="0-100" id="price-1">
                        <label class="custom-control-label" for="price-1">$0 - $100</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input" value="100-200" id="price-2">
                        <label class="custom-control-label" for="price-2">$100 - $200</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input" value="200-300" id="price-3">
                        <label class="custom-control-label" for="price-3">$200 - $300</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input" value="300-400" id="price-4">
                        <label class="custom-control-label" for="price-4">$300 - $400</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                        <input type="checkbox" class="custom-control-input" value="400-500" id="price-5">
                        <label class="custom-control-label" for="price-5">$400 - $500</label>
                    </div>
                </form>
            </div>
            <!-- Price End -->
            <!-- Brand Start -->
            <div class="mb-5">
                <h5 class="font-weight-semi-bold mb-4">Filter by brand</h5>
                <form id="brand-filter-form">
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input" value="all" checked="" id="brand-all">
                        <label class="custom-control-label" for="brand-all">All</label>
                    </div>
                    @{
                        // Lấy danh sách brand duy nhất
                        var uniqueBrands = Model.Products
                        .Select(p => p.Brand)
                        .GroupBy(b => b.BrandId)
                        .Select(g => g.First())
                        .ToList();
                    }
                    @foreach (var brand in uniqueBrands)
                    {
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input" value="@brand.BrandName" id="@brand.BrandId">
                            <label class="custom-control-label" for="@brand.BrandId">@brand.BrandName</label>
                        </div>
                    }


                </form>
            </div>
            <button id="btnFilter" class="fa fa-search">Filter</button>
            <!-- Brand End -->
        </div>
        <!-- Shop Sidebar End -->
        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-12">
            <div class="row pb-3" id="filtered-products">


                @foreach (var item in Model.Products)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                        <div class="card product-item border-0 mb-4">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                <img class="img-fluid w-100" src="~/images/@item.ProductImage" alt="">
                            </div>
                            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3">@item.ProductName</h6>
                                <div class="d-flex justify-content-center">
                                    <h6>$@(item.ProductPrice * (1 - item.ProductDiscount))</h6><h6 class="text-muted ml-2"><del>$@item.ProductPrice</del></h6>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <a href="/Products/Details/?id=@item.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                                <a href="/Cart/AddToCart/?productId=@item.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                            </div>
                        </div>
                    </div>
                }






                <div class="col-12 pb-1">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center mb-3">
                            <!-- Nút Previous -->
                            <li class="page-item @(Model.PagingInfo.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link"
                                   asp-action="ProductByCart"
                                   asp-route-categoryId="@Model.CurrentCategory"
                                   asp-route-productPage="@(Model.PagingInfo.CurrentPage - 1)"
                                   aria-label="Previous">
                                    <span aria-hidden="true">«</span>
                                </a>
                            </li>

                            <!-- Danh sách các trang -->
                            @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PagingInfo.CurrentPage ? "active" : "")">
                                    <a class="page-link"
                                       asp-action="ProductByCart"
                                       asp-route-categoryId="@Model.CurrentCategory"
                                       asp-route-productPage="@i">@i</a>
                                </li>
                            }

                            <!-- Nút Next -->
                            <li class="page-item @(Model.PagingInfo.CurrentPage == Model.PagingInfo.TotalPages ? "disabled" : "")">
                                <a class="page-link"
                                   asp-action="ProductByCart"
                                   asp-route-categoryId="@Model.CurrentCategory"
                                   asp-route-productPage="@(Model.PagingInfo.CurrentPage + 1)"
                                   aria-label="Next">
                                    <span aria-hidden="true">»</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>

               
            </div>
        </div>
        <!-- Shop Product End -->
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            if (!$('#filtered-products').length) return;

            var currentPage = 1;
            var pageSize = 9;
            var categoryId = '@Model.CurrentCategory'; // Lấy CategoryId hiện tại từ model

            // ======== UTILITIES =========
            function getCheckedValues(selector) {
                return $(selector + ':checked').map(function () {
                    return $(this).val();
                }).get();
            }

            function updateSelectedFilters(prices, brands) {
                var container = $('#selected-filters');
                if (!container.length) {
                    $('.border-bottom').first().before(`
                        <div class="mb-3">
                            <h6>Selected Filters:</h6>
                            <div id="selected-filters" class="d-flex flex-wrap"></div>
                        </div>
                    `);
                    container = $('#selected-filters');
                }

                container.empty();

                if ((prices.length === 0 || prices.includes('all')) &&
                    (brands.length === 0 || brands.includes('all'))) {
                    container.append('<span class="text-muted">None</span>');
                    return;
                }

                prices.filter(v => v !== 'all').forEach(p => {
                    container.append(`<span class="badge badge-primary mr-1 mb-1 filter-badge" data-type="price" data-value="${p}">${p} &times;</span>`);
                });

                brands.filter(v => v !== 'all').forEach(b => {
                    container.append(`<span class="badge badge-success mr-1 mb-1 filter-badge" data-type="brand" data-value="${b}">${b} &times;</span>`);
                });
            }

            // ======== MAIN AJAX CALL =========
            function loadProducts(page = 1) {
                currentPage = page;

                var keywords = $('#search-keywords').val() || '';
                var prices = getCheckedValues('.custom-control-input[value*="-"]'); // chỉ lấy checkbox price
                var brands = getCheckedValues('#brand-filter-form .custom-control-input');

                updateSelectedFilters(prices, brands);

                var data = {
                    CategoryId: categoryId,
                    Keywords: keywords,
                    PriceRanges: prices,
                    Brands: brands,
                    Page: currentPage,
                    PageSize: pageSize
                };

                $.ajax({
                    url: '/Products/GetProductsByCategory',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    success: function (res) {
                        $('#filtered-products').html(res.productsHtml);
                        generatePagination(res.totalPages, currentPage);
                    },
                    error: function (xhr) {
                        console.error(xhr);
                        alert('Lỗi khi tải sản phẩm! Vui lòng thử lại.');
                    }
                });
            }

            // ======== PAGINATION =========
            function generatePagination(totalPages, current) {
                var $pagination = $('.pagination');
                $pagination.empty();

                for (let i = 1; i <= totalPages; i++) {
                    $pagination.append(`<li class="page-item ${i === current ? 'active' : ''}">
                        <a class="page-link" href="#">${i}</a>
                    </li>`);
                }
            }

            // ======== FILTER LOGIC =========
            // Price “All” logic
            $('#price-all').change(function () {
                if (this.checked) {
                    $('#price-filter-form input[type="checkbox"]').not(this).prop('checked', false);
                }
            });
            $('#price-filter-form input[type="checkbox"]').not('#price-all').change(function () {
                if (this.checked) $('#price-all').prop('checked', false);
            });

            // Brand “All” logic
            $('#brand-all').change(function () {
                if (this.checked) {
                    $('#brand-filter-form input[type="checkbox"]').not(this).prop('checked', false);
                }
            });
            $('#brand-filter-form input[type="checkbox"]').not('#brand-all').change(function () {
                if (this.checked) $('#brand-all').prop('checked', false);
            });

            // ======== EVENTS =========
            $('#btnFilter').click(function (e) {
                e.preventDefault();
                loadProducts(1);
            });

            // Nếu có form tìm kiếm
            $('#search-form').submit(function (e) {
                e.preventDefault();
                loadProducts(1);
            });

            // Click vào badge (xóa filter)
            $(document).on('click', '.filter-badge', function () {
                var type = $(this).data('type');
                var value = $(this).data('value');

                if (type === 'price')
                    $(`#price-filter-form input[value="${value}"]`).prop('checked', false);
                if (type === 'brand')
                    $(`#brand-filter-form input[value="${value}"]`).prop('checked', false);

                $(this).remove();
                loadProducts(1);
            });

            // Click vào phân trang
            $(document).on('click', '.page-link', function (e) {
                e.preventDefault();
                var page = parseInt($(this).text());
                loadProducts(page);
            });

            // ======== INITIAL LOAD =========
            loadProducts(1);
        });
    </script>

    <style>
        .filter-badge {
            cursor: pointer;
            font-size: 0.9rem;
            padding: 0.4em 0.6em;
        }

            .filter-badge:hover {
                opacity: 0.8;
            }
    </style>
}


