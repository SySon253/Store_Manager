@using Store.Models.ViewModels
@model ProductListViewModel

@{
    ViewData["Title"] = "Shop";
}

<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <!-- Shop Sidebar Start -->
        <div class="col-lg-3 col-md-12">

            <!-- Selected Filters -->
            <div class="mb-3">
                <h6>Selected Filters:</h6>
                <div id="selected-filters" class="d-flex flex-wrap"></div>
            </div>

            <!-- Price Filter -->
            <div class="border-bottom mb-4 pb-4">
                <h5 class="font-weight-semi-bold mb-4">Filter by price</h5>
                <form id="price-filter-form">
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input price-checkbox" value="all" checked id="price-all">
                        <label class="custom-control-label" for="price-all">All Price</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input price-checkbox" value="0-100" id="price-1">
                        <label class="custom-control-label" for="price-1">$0 - $100</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input price-checkbox" value="100-200" id="price-2">
                        <label class="custom-control-label" for="price-2">$100 - $200</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input price-checkbox" value="200-300" id="price-3">
                        <label class="custom-control-label" for="price-3">$200 - $300</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input price-checkbox" value="300-400" id="price-4">
                        <label class="custom-control-label" for="price-4">$300 - $400</label>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                        <input type="checkbox" class="custom-control-input price-checkbox" value="400-500" id="price-5">
                        <label class="custom-control-label" for="price-5">$400 - $500</label>
                    </div>
                </form>
            </div>

            <!-- Brand Filter -->
            <div class="mb-5">
                <h5 class="font-weight-semi-bold mb-4">Filter by brand</h5>
                <form id="brand-filter-form">
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input brand-checkbox" value="all" checked id="brand-all">
                        <label class="custom-control-label" for="brand-all">All</label>
                    </div>
                    @{
                        var uniqueBrands = Model.Products
                        .Select(p => p.Brand)
                        .GroupBy(b => b.BrandId)
                        .Select(g => g.First())
                        .ToList();
                    }
                    @foreach (var brand in uniqueBrands)
                    {
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="checkbox" class="custom-control-input brand-checkbox" value="@brand.BrandName" id="@brand.BrandId">
                            <label class="custom-control-label" for="@brand.BrandId">@brand.BrandName</label>
                        </div>
                    }
                </form>
            </div>

            <button id="btnFilter" class="fa fa-search btn btn-primary">Filter</button>

        </div>
        <!-- Shop Sidebar End -->
        <!-- Shop Sidebar End -->
        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-12">
            <div class="row pb-3" id="filtered-products">
                @foreach (var item in Model.Products)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                        <div class="card product-item border-0 mb-4">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                <img class="img-fluid w-100" src="~/images/@item.ProductImage" alt="">
                            </div>
                            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3">@item.ProductName</h6>
                                <div class="d-flex justify-content-center">
                                    <h6>$@(item.ProductPrice * (1 - item.ProductDiscount))</h6>
                                    <h6 class="text-muted ml-2"><del>$@item.ProductPrice</del></h6>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <a href="/Products/Details/?id=@item.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                                <a href="/Cart/AddToCart/?productId=@item.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-12">
                    <nav>
                        <ul class="pagination justify-content-center" id="pagination">
                        </ul>
                    </nav>
                </div>
            </div>

        </div>
        <!-- Shop Product End -->
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            if (!$('#filtered-products').length) return;

            var currentPage = 1;
            var pageSize = 9;

            function getCheckedValues(selector) {
                return $(selector + ':checked').map(function () {
                    return $(this).val();
                }).get();
            }

            function updateSelectedFilters(prices, brands) {
                var container = $('#selected-filters');
                container.empty();

                if ((prices.length === 0 || prices.includes('all')) &&
                    (brands.length === 0 || brands.includes('all'))) {
                    container.append('<span class="text-muted">None</span>');
                    return;
                }

                prices.filter(v => v !== 'all').forEach(p => {
                    container.append(`<span class="badge badge-primary mr-1 mb-1 filter-badge" data-type="price" data-value="${p}">${p} &times;</span>`);
                });

                brands.filter(v => v !== 'all').forEach(b => {
                    container.append(`<span class="badge badge-success mr-1 mb-1 filter-badge" data-type="brand" data-value="${b}">${b} &times;</span>`);
                });
            }

            function loadProducts(page = 1) {
                currentPage = page;

                var keywords = $('#search-keywords').val() || '';
                var prices = getCheckedValues('.price-checkbox');
                var brands = getCheckedValues('.brand-checkbox');

                console.log('Prices selected:', prices);
                console.log('Brands selected:', brands);

                updateSelectedFilters(prices, brands);

                var data = {
                    Keywords: keywords,
                    PriceRanges: prices,
                    Brands: brands,
                    Page: currentPage,
                    PageSize: pageSize
                };
                        
                $.ajax({
                    url: '/Products/GetProducts', // chỉ gọi 1 endpoint duy nhất
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    success: function (res) {
                        $('#filtered-products').html(res.productsHtml);
                        generatePagination(res.totalPages, currentPage);
                    },
                    error: function (xhr) {
                        console.error(xhr);
                        alert('Lỗi khi tải sản phẩm! Vui lòng thử lại.');
                    }
                });
            }

            function generatePagination(totalPages, current) {
                var $pagination = $('#pagination');
                $pagination.empty();

                for (let i = 1; i <= totalPages; i++) {
                    $pagination.append(`<li class="page-item ${i === current ? 'active' : ''}">
                        <a class="page-link" href="#">${i}</a>
                    </li>`);
                }
            }

            // Price “All” logic
            $('#price-all').change(function () {
                if (this.checked) {
                    $('.price-checkbox').not(this).prop('checked', false);
                }
            });
            $('.price-checkbox').not('#price-all').change(function () {
                if (this.checked) $('#price-all').prop('checked', false);
            });

            // Brand “All” logic
            $('#brand-all').change(function () {
                if (this.checked) {
                    $('.brand-checkbox').not(this).prop('checked', false);
                }
            });
            $('.brand-checkbox').not('#brand-all').change(function () {
                if (this.checked) $('#brand-all').prop('checked', false);
            });

            $('#btnFilter').click(function (e) {
                e.preventDefault();
                loadProducts(1);
            });

            // Form tìm kiếm
            $('#search-form').submit(function (e) {
                e.preventDefault();
                loadProducts(1);
            });

            // Click vào badge (xóa filter)
            $(document).on('click', '.filter-badge', function () {
                var type = $(this).data('type');
                var value = $(this).data('value');

                if (type === 'price')
                    $(`.price-checkbox[value="${value}"]`).prop('checked', false);
                if (type === 'brand')
                    $(`.brand-checkbox[value="${value}"]`).prop('checked', false);

                $(this).remove();
                loadProducts(1);
            });

            // Click vào phân trang
            $(document).on('click', '.page-link', function (e) {
                e.preventDefault();
                var page = parseInt($(this).text());
                loadProducts(page);
            });

            loadProducts(1);
        });
    </script>

}
<style>
    .filter-badge {
        cursor: pointer;
        font-size: 0.9rem;
        padding: 0.4em 0.6em;
    }

        .filter-badge:hover {
            opacity: 0.8;
        }
</style> 

