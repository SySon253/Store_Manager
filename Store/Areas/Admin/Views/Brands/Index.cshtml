@model IEnumerable<Store.Models.Brand>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Brand Manager</h1>

<p>
    <a asp-area="Admin" asp-controller="Brands" asp-action="Create" class="w3-button w3-green">Create New</a>
</p>

<div class="w3-container">
    <table class="w3-table-all w3-hoverable">
        <thead>
            <tr class="w3-light-grey">
                <th>@Html.DisplayNameFor(model => model.BrandName)</th>
                <th>Actions</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.BrandName)</td>
                <td>
                    <a asp-area="Admin" asp-controller="Brands" asp-action="Edit" asp-route-id="@item.BrandId">Edit</a> |
                    <a asp-area="Admin" asp-controller="Brands" asp-action="Details" asp-route-id="@item.BrandId">Details</a> |
                    <a asp-area="Admin" asp-controller="Brands" asp-action="Delete" asp-route-id="@item.BrandId">Delete</a>
                </td>
            </tr>
        }

    </table>
</div>

