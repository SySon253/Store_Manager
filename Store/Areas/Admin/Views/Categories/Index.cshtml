@model IEnumerable<Store.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Category Manager</h1>

<p>
    <a asp-area="Admin" asp-controller="Categories" asp-action="Create" class="w3-button w3-green">Create New</a>
</p>
<div class="w3-container">
    <table class="w3-table-all w3-hoverable">
        <thead>
            <tr class="w3-light-grey">
                <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                <th>@Html.DisplayNameFor(model => model.CategoryImage)</th>
                <th>Actions</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td>
                    <img src="~/images/@item.CategoryImage"
                         alt="@item.CategoryName"
                         style="width:100px; height:auto; border-radius:5px;" />
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                    <a asp-area="Admin" asp-controller="Categories" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                    <a asp-area="Admin" asp-controller="Categories" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }

    </table>
</div>

